<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <lang.formatter language="Stylus" order="first"
                        id="MiniProgramStylusFormattingModelBuilder"
                        implementationClass="com.zxy.ijplugin.miniprogram.lang.stylus.MiniProgramStylusFormattingModelBuilder"/>
        <lang.syntaxHighlighter language="Stylus"
                                id="MiniProgramStylusSyntaxHighlighter"
                                order="first"
                                implementationClass="com.zxy.ijplugin.miniprogram.lang.stylus.MiniProgramStylusSyntaxHighlighter"/>
        <lang.inspectionSuppressor language="Stylus"
                                   implementationClass="com.zxy.ijplugin.miniprogram.lang.wxss.WxssCssInspectionFilter"/>
    </extensions>
</idea-plugin>