<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <lang.formatter language="LESS"
                        id="MiniProgramLessFormattingModelBuilder"
                        order="first"
                        implementationClass="com.zxy.ijplugin.miniprogram.lang.less.MiniProgramLessFormattingModelBuilder"/>
        <lang.syntaxHighlighter language="LESS"
                                id="MiniProgramLessSyntaxHighlighter"
                                order="first"
                                implementationClass="com.zxy.ijplugin.miniprogram.lang.less.MiniProgramLessSyntaxHighlighter"/>
        <lang.inspectionSuppressor language="LESS"
                                   implementationClass="com.zxy.ijplugin.miniprogram.lang.wxss.WxssCssInspectionFilter"/>
    </extensions>
</idea-plugin>