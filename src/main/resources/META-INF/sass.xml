<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <lang.formatter language="SCSS" order="first"
                        id="MiniProgramScssFormattingModelBuilder"
                        implementationClass="com.zxy.ijplugin.miniprogram.lang.scss.MiniProgramScssFormattingModelBuilder"/>
        <lang.syntaxHighlighter language="SCSS"
                                id="MiniProgramScssSyntaxHighlighter"
                                order="first"
                                implementationClass="com.zxy.ijplugin.miniprogram.lang.scss.MiniProgramScssSyntaxHighlighter"/>
        <lang.inspectionSuppressor language="SCSS"
                                   implementationClass="com.zxy.ijplugin.miniprogram.lang.wxss.WxssCssInspectionFilter"/>
        <lang.formatter language="SASS" order="first"
                        id="MiniProgramSassFormattingModelBuilder"
                        implementationClass="com.zxy.ijplugin.miniprogram.lang.sass.MiniProgramSassFormattingModelBuilder"/>
        <lang.syntaxHighlighter language="SASS"
                                id="MiniProgramSassSyntaxHighlighter"
                                order="first"
                                implementationClass="com.zxy.ijplugin.miniprogram.lang.sass.MiniProgramSassSyntaxHighlighter"/>
        <lang.inspectionSuppressor language="SASS"
                                   implementationClass="com.zxy.ijplugin.miniprogram.lang.wxss.WxssCssInspectionFilter"/>
    </extensions>
</idea-plugin>